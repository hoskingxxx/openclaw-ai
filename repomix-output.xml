"use client";

import { useState } from "react";

interface CodeBlockProps {
  title?: string;
  code: string;
  language?: string;
  onCopy?: () => void;
}

export function CodeBlock({ title, code, language = "bash", onCopy }: CodeBlockProps) {
  const [copied, setCopied] = useState(false);

  const handleCopy = () => {
